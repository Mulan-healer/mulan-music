{
  "name": "mulan-music",
  "private": true,
  "version": "0.1.5",
  "description": "A beautiful local music player built with Electron and React",
  "author": "Mulan",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite dev",
    "build:win": "npm version patch --no-git-tag-version && npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.mulan.music",
    "productName": "Mulan Music",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "lucide-react": "^0.284.0",
    "music-metadata": "^7.13.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scroll-into-view-if-needed": "^3.1.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "electron": "^25.3.0",
    "electron-builder": "^24.6.3",
    "electron-vite": "^1.0.29",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
